{
	"compilerOptions": {
	  /* File Layout */
	  "rootDir": "./src",
	  "outDir": "./dist",
  
	  /* Environment Settings */
	  "target": "ES2020",
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "lib": ["ES2020"],
	  "types": ["node"],
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
  
	  /* Output Options */
	  "sourceMap": true,
	  "declaration": true,
	  "declarationMap": true,
  
	  /* Type Checking */
	  "strict": true,
	  "skipLibCheck": true,
  
	  /* Others */
	  "forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
  }
  